generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id            Int           @id @default(autoincrement())
  nome          String
  telefone      String
  email         String        @unique
  senha         String        // Salvar√° o hash da senha
  tipo          UsuarioTipo
  createdAt     DateTime      @default(now())
  agendamentos  Agendamento[] // Relacionamento com os agendamentos

  @@map("usuarios")
}

model Agendamento {
  id         Int       @id @default(autoincrement())
  servico    String
  dataHora   DateTime
  usuarioId  Int
  usuario    Usuario   @relation(fields: [usuarioId], references: [id])
  createdAt  DateTime  @default(now())

  @@map("agendamentos")
}

enum UsuarioTipo {
  cliente
  profissional
}
