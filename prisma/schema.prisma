generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int          @id @default(autoincrement())
  nome      String
  telefone  String
  email     String       @unique
  senha     String       // Senha com hash (por seguran√ßa)
  tipo      UsuarioTipo
  createdAt DateTime     @default(now())

  agendamentos Agendamento[]

  @@map("usuarios") // Nome da tabela no banco
}

model Agendamento {
  id        Int      @id @default(autoincrement())
  servico   String
  dataHora  DateTime // Combina data e hora do agendamento
  usuarioId Int
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
  createdAt DateTime @default(now())

  @@map("agendamentos")
}

enum UsuarioTipo {
  cliente
  profissional
}
